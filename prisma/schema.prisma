generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          String     @id @default(cuid())
  name        String
  slug        String     @unique
  description String?
  image       String?
  category    String
  createdAt   DateTime   @default(now())
  variants    Variant[]
}

model Variant {
  id        String   @id @default(cuid())
  name      String
  price     Decimal   // precise for money
  inStock   Boolean   @default(true)
  product   Product   @relation(fields: [productId], references: [id])
  productId String
}
